{
  "manifest_version": 2,
  "name": "Webscout Fulfillment Extension",
  "description": "This extension helps with the Webscout fulfillment workflow",
  "version": "1.0",

  "browser_action": {},
  "content_scripts": [
    {"matches": ["<all_urls>"], "js": ["fulfillment_content_script.js"]},
    {"matches": ["http://45.55.18.141/#/orders"], "js": ["webscout_content_script.js"]}
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "bower_components/lodash/lodash.js",
    "bower_components/jquery/dist/jquery.js",
    "product_page/product_page_controller.js",
    "webscout_orders_page/webscout_orders_page_controller.js"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}